      echo " "
      
      if [ ! -d /opt/AmigaVision/ ]; then
 
         cd /user/local/bin/
 
         ./vision
 
 fi
       echo "Starting AmigaVision"
      
 cd /opt/Amiga/
      ./amiberry --config conf/AmigaVision.uae -G
      cd
